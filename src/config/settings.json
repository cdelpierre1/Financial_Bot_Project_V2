{
	"timezone": "UTC",
	"paths": {
		"base_drive": "E:",
		"data_parquet": "src/data/parquet",
		"logs": "src/logs",
		"models_trained": "src/models/trained_models",
		"models_backup": "src/models/backup_models",
		"runtime": "src/ops/runtime"
	},
	"parquet": {
		"compression": "snappy",
		"partitions": ["date", "coin_id"],
		"schemas": {
			"five_min": ["ts_utc_ms","coin_id","o","h","l","c","volume","agg_method"],
			"hourly":   ["ts_utc_ms","coin_id","o","h","l","c","volume","agg_method"],
			"daily":    ["ts_utc_ms","coin_id","o","h","l","c","volume","agg_method"],
			"markets":  ["ts_utc_ms","coin_id","price_usd","market_cap","vol24h","chg1h","chg24h","chg7d"],
			"tickers_spread": ["ts_utc_ms","coin_id","exch","bid","ask","mid","spread_pct","filtered","median_flag"],
			"fx": ["ts_utc_ms","base","rate_usd_per_eur","ttl_until"]
		},
			"retention_days": {
				"five_min": 30,
				"hourly": 730,
				"daily": 36500,
				"predictions": 60,
				"eval_results": 365
			}
	},
	"cadences": {
		"collectors": {
			"simple_price_pull_sec": 10,
			"coins_markets_pull_sec": 60,
			"market_chart_pull_sec": 300,
			"tickers_pull_sec": 600,
			"fx_pull_sec": 3600,
			"evaluation_pull_sec": 120
		},
		"training": {
			"micro_update_min": 5,
			"mini_retrain_min": 10,
			"refit_hourly_h": 1,
			"recalibration_daily_d": 1,
			"weekly_gpu_d": 7
		},
		"anti_thrash_min": 5
	},
	"features": {
		"anti_sleep_windows": true,
		"resume_on_start": true,
		"single_process_lock": true
	}
}
